<!-- Button : BEGIN -->
<table border="0" cellpadding="0" cellspacing="0" class="center-on-narrow" role="presentation" style="{% if buttonCenter %}{% else %}float: left;{% endif %}">
    <tbody>
        <tr>
            <td class="button-td button-td-primary" style="background: #ee3124;border-radius: 4px;">
                <a 
                    class="button-a button-a-primary"
                    href="{{ buttonUrl }}"
                    style="font-family: Arial, sans-serif; font-size: 14px; line-height: 22px; font-weight: bold; text-decoration: none; padding: 5px 25px; display: block; color: #000000; border: 1px solid #eaf30a; background: #eaf30a; border-radius: 4px;"
                    target="_blank">{{ buttonText }}
                </a>
            </td>
        </tr>
    </tbody>
</table>
<!-- Button : END -->
<table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
    <tr>
        <td dir="{% if imageAlignmentRight %}rtl{% else %}ltr{% endif %}" style="padding: 0; background-color: #000000;"
            width="100%">
            <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                <tbody>
                    <tr>
                        <!-- Column : BEGIN -->
                        <th class="stack-column-center" width="50%">
                            <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                                <tbody>
                                    <tr>
                                        <td dir="ltr" style="padding: 0;" valign="top">
                                            {% if imageDestinationUrl %}<a href="{{ imageDestinationUrl }}"
                                                target="_blank">{% endif %}
                                                <img alt="alt_text" border="0" class="center-on-narrow" height="100%"
                                                    alt="{{ imageAltText }}" src="{{ imageUrl }}"
                                                    style="height: auto; background: #000000; font-family: Arial, sans-serif; font-size: 15px; line-height: 15px; color: #ffffff; display: block;"
                                                    width="100%" />
                                                {% if imageDestinationUrl %}</a>{% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </th>
                        <!-- Column : END -->
                        <!-- Column : BEGIN -->
                        <th class="stack-column-center" width="50%">
                            <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                                <tbody>
                                    <tr>
                                        <td class="center-on-narrow" dir="ltr"
                                            style="font-family: Arial, sans-serif;; font-size: 15px; line-height: 20px; color: #c7c7c7; padding: 30px; text-align: left;"
                                            valign="top">
                                            <h3
                                                style="font-size: 20px; line-height: 25px; font-family: Arial, sans-serif; color:#ffffff; text-transform: uppercase; margin: 5px 0 10px 0;">
                                                {{ title }}</h3>
                                            <p
                                                style="font-size: 16px; line-height: 22px; font-family: Arial, sans-serif; color:#c7c7c7;font-weight: bold; text-transform: uppercase; margin: 0 0 25px;">
                                                {{ description }}</p>
                                            {% if buttonUrl and buttonText %}{% include 'button.liquid' %}{% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </th>
                        <!-- Column : END -->
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>